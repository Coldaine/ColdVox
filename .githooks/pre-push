#!/usr/bin/env bash
set -euo pipefail

repo_root="$({
  cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd
})"

"$repo_root/scripts/ensure_agent_hardlinks.sh" --quiet

# Documentation naming validator (mandatory per docs/MasterDocumentationPlaybook.md)
uv run "$repo_root/scripts/validate_domain_docs_naming.py"
