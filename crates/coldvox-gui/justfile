# ColdVox GUI Development Commands
# Requires: just (https://github.com/casey/just)

# Run GUI with Qt UI enabled
gui:
    QMAKE=$(which qmake6) cargo run -p coldvox-gui --features qt-ui

# Run tests (Qt not included)
test:
    cargo test

# Build GUI crate
build:
    cargo build -p coldvox-gui

# Build with Qt UI
build-qt:
    QMAKE=$(which qmake6) cargo build -p coldvox-gui --features qt-ui

# Clean build artifacts
clean:
    cargo clean

# Check code without building
check:
    cargo check -p coldvox-gui

# Format code
fmt:
    cargo fmt -p coldvox-gui

# Lint code
clippy:
    cargo clippy -p coldvox-gui
